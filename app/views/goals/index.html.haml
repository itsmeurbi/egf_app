.column.desktop--container
  .title=t("generic.my_goal")
  %section.goal__container.accordions
    - @goals.each_with_index do |goal, index|
      %article.accordion
        .accordion-header
          .path__container
            .subtitle
              .subtitle__image
                =image_tag 'circle-icon.svg'
              .subtitle__text.subtitle__text--medium.subtitle__text__with_icon
                =t("generic.road_number", number: index + 1)
            .breadcrumb__path
              %nav.breadcrumb
                %ul
                  %li
                    =link_to(category_name(goal), '')
                  %li
                    =link_to(track_name(goal), '')
                  %li
                    =link_to("level #{level(goal)}", '', class: 'is-active')
            .subtitle
              .subtitle__image
                =image_tag 'time-icon.svg'
              .subtitle__text.subtitle__text--medium.subtitle__text__with_icon
                =t("generic.periods")
            .timeframe
              %p= t("generic.date_range", start_date: goal.start_time.strftime('%m/%d/%Y'), end_date: goal.end_time.strftime('%m/%d/%Y'))
          %button.toggle
          = link_to(t("generic.edit"), edit_goal_path(goal.id), class: 'reddish button--edit')
        .accordion-body
          .accordion-content
            .subtitle
              .subtitle__image
                =image_tag 'flag-icon.svg'
              .subtitle__text.subtitle__text--medium.subtitle__text__with_icon
                =t("pages.goals.main_goal")
            .text= goal.milestone.description
            .subtitle
              .subtitle__image
                =image_tag 'resources-icon.svg'
              .subtitle__text.subtitle__text--medium.subtitle__text__with_icon
                =t("generic.util_resources")
              %ul.resources__list
                - goal.resources.each do |resource|
                  %li.reddish
                    =link_to(resource.name, resource.url, target: '_blank')
            .subtitle
              .subtitle__image
                =image_tag 'tasks-icon.svg'
              .subtitle__text.subtitle__text--medium.subtitle__text__with_icon
                =t("generic.objective")
            .container.acordion--objectives
              .objective= goal.objective.description
              %section.accordions
                %article.accordion--objective
                  .accordion-header
                    %b=t("pages.goals.key_results")
                    %button.toogle
                  .accordion-body
                    .accordion-content
                      .tasks__container
                        = render partial: 'key_results', collection: goal.objective.key_results, as: :key
                      = link_to('Add key result', new_key_result_path(goal_id: goal.id), class: 'reddish')

              .advisors__container
                .subtitle.subtitle--advisors
                  .subtitle__image
                    =image_tag 'advisors-icon.svg'
                  .subtitle__text.subtitle__text--medium.subtitle__text__with_icon
                    =t("pages.goals.recommended_advisors")
                .advisors
                  =image_tag('karen.png')
                  %p Karen Ventura
      .linear__separator
  = link_to(t("pages.links.add_new_path"), new_goal_path, class: 'button button--large button__color--reddish button__border--reddish')

:javascript
  $(document).ready( function() {
    Egf.bulmaAccordion.attach();
    new Egf.NestedAccordion().nestedAccordion();
  });
