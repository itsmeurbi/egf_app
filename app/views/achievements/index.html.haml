.title Trayectoria profesional
.paths__container
  .path__container.background--reddish.my-path
    =link_to(t("pages.links.my_achievements"), '#', class: 'text--white')
  .path__container.button__border--reddish.michelada-path
    =link_to(t("pages.links.michelada_achievements"), '#', class: 'reddish')
.graph__image
=image_tag('chart-personal@3x.jpg')
.subtitle__text.subtitle__text--medium
  %b=t("pages.achievements.my_performance")
.text.performance--review
  =t("pages.achievements.your_focus")
.linear__separator
.container.career-path
  .advisors__container
    .subtitle
      .subtitle__image
        =image_tag 'advisors-icon.svg'
      .subtitle__text.subtitle__text--medium.subtitle__text__with_icon
        =t("pages.achievements.my_mentors")
    .mentors-by-level__container
      - @goals.each do |goal|
        .breadcrumb__path
          %nav.breadcrumb
            %ul
              %li
                =link_to(category_name(goal), '')
              %li
                =link_to(track_name(goal), '')
              %li
                =link_to(t("pages.links.level", level: level(goal)), '', class: 'is-active')
        .advisors
          =image_tag(goal.mentor.image_url)
          %p= goal.mentor.name
