.main__container.column
  .title Mi meta
  .linear__separator
  %section.goal__container.accordions
    - @goals.each_with_index do |goal, index|
      %article.accordion
        .accordion-header
          .path__container
            .subtitle__container
              .subtitle
                =image_tag 'circle-icon.svg'
                .text= "Trayecto #{index + 1}"
            .breadcrumb__path
              %nav.breadcrumb
                %ul
                  %li
                    =link_to(category_name(goal), '')
                  %li
                    =link_to(track_name(goal), '')
                  %li
                    =link_to("level #{level(goal)}", '', class: 'is-active')
            .subtitle__container
              .subtitle
                =image_tag 'time-icon.svg'
                .text Periodo
            .timeframe
              %p= "#{goal.start_time.strftime('%m/%d/%Y')} to #{goal.end_time.strftime('%m/%d/%Y')}"
            = link_to('Editar', edit_goal_path(goal.id), class: 'reddish button--edit')
          %button.toggle
        .accordion-body
          .accordion-content
            .subtitle__container
              .subtitle
                =image_tag 'flag-icon.svg'
                .text La meta principal en este nivel
              %p= goal.milestone.description
            .subtitle__container
              .subtitle
                =image_tag 'resources-icon.svg'
                .text Recursos Ãºtiles
              %ul.resources__list
                - goal.resources.each do |resource|
                  %li.reddish
                    =link_to(resource.name, resource.url, target: '_blank')
            .container.acordion--objectives
              .subtitle__container.subtitle__container--objectives
                .subtitle
                  =image_tag 'tasks-icon.svg'
                  .text Objetivos
              %section.accordions
                - goal.objectives.each_with_index do |objective, index|
                  %article.accordion--objective
                    .accordion-header
                      %p= "#{index+1} #{objective.description}"
                      %button.toogle
                    .accordion-body
                      .accordion-content
                        .subtitle__container
                          %b Key results
                        .tasks__container
                          - objective.key_results.each do |key|
                            .task
                              - if key.completed?
                                %i.fas.fa-check-circle
                              - else
                                .circle--not-check
                                  .circle.circle--reddish

                              %p= key.description
                          = link_to('Add key result', '#', class: 'reddish')

              .okr__container
                = link_to('Agregar objetivo', '#', class: 'reddish')
                .linear__separator
              .advisors__container
                .subtitle__container
                  .subtitle
                    =image_tag 'advisors-icon.svg'
                    .text Asesores recomendados:
                .advisors
                  =image_tag('karen.png')
                  %p Karen Ventura
      .linear__separator
  = link_to('Agregar nuevo trayecto', new_goal_path, class: 'button button--large button__color--reddish button__border--reddish')

:javascript
  $(document).ready( function() {
    var accordions = Egf.bulmaAccordion.attach();
    new Egf.NestedAccordion().nestedAccordion();
  });
